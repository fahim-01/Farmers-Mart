<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@drawable/customborder1"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="5dp"

    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="bottom">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/login3"


        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="141dp"

        android:gravity="center"
        android:text="আকিবুর রশিদ      "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000"
        android:paddingLeft="10dp"
        android:layout_margin="3dp"

        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/customborder4"
        android:gravity="center_vertical"
        android:text="জেলা          :      দিনাজপুর"
        android:textColor="#000"
        android:textSize="23sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/customborder4"
        android:gravity="center_vertical"
        android:text="ঊপজেলা     :      সুবিদবাজার"
        android:textColor="#000"
        android:textSize="23sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/customborder4"
        android:gravity="center_vertical"
        android:text="গ্রাম              :       মেলবর্ন"
        android:textColor="#000"
        android:textSize="23sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/customborder4"
        android:gravity="center_vertical"
        android:text="মোবাইল নং : ০১৭৩১৯১৫৬৮৭"
        android:textColor="#000"
        android:textSize="23sp"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/customborder4"
        android:gravity="center_vertical"
        android:text="এনআইডি    :            ৪৫১২৫৪"
        android:textColor="#000"
        android:textSize="23sp"

        >

    </TextView>



</LinearLayout>